<?xml version="1.0" encoding="utf-8"?>



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ypsitos.neighborhoodapp.DetailActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="#000000" />

    <TextView
    android:id = "@+id/heroNameTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="p1"
    android:layout_gravity="center_horizontal"
    android:textSize="40sp"
    android:textColor="#ff0000"
    android:textStyle="bold" />

    <TextView
    android:id = "@+id/realNameTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="p2"
    android:layout_below="@+id/heroNameTextView"
    android:layout_alignLeft="@+id/heroNameTextView"
    android:layout_alignStart="@+id/heroNameTextView"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:textSize="20sp"
    android:layout_marginBottom="10dp" />

    <TextView
        android:id = "@+id/powersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="p3"
        android:layout_below="@+id/realNameTextView"
        android:layout_alignLeft="@+id/realNameTextView"
        android:layout_alignStart="@+id/realNameTextView"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp" />

    <TextView
        android:id = "@+id/additionalDetailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="p4"
        android:layout_below="@+id/powersTextView"
        android:layout_alignLeft="@+id/powersTextView"
        android:layout_alignStart="@+id/powersTextView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

</LinearLayout>

</ScrollView>